@model AnnouncementViewModel
@{
    ViewData["Title"] = "Add Announcement";
}

<div class="text-center">
    <h1 class="display-4">You are creating an announcement!</h1>
</div>

<div>
    <form asp-controller="Announcement" asp-action="Add" method="post">
        Title<input type="text" name="Title" /><br>
        Description<input type="text" name="Description" /><br>
        PublisherId<input type="text" name="PublisherId" /><br>
        AddedOn<input type="datetime-local" name="AddedOn" /><br>
        ServerIds<input type="text" name="ServerIds" /><br>

        <button type="submit">Create</button>
    </form>
</div>

