    Desc: @thismodel.Description<br>
    PCU: @thismodel.PeakConcurrentUsers, AddedOn: @thismodel.AddedOn<br>
    Type: @thismodel.TypeString, ServerId: <a asp-controller="Server" asp-action="Details" asp-route-id="@thismodel.Id">@thismodel.Id</a><br>
</div>
